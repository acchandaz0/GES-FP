#:kivy 2.2.1

<GamePlayScreen>:
    game_grid: game_grid_id
    fuel_label: fuel_label_id
    battery_label: battery_label_id
    packages_label: packages_label_id
    hint_button: hint_button_id

    FloatLayout:
        # The Game Grid takes up most of the screen
        GameGrid:
            id: game_grid_id
            size_hint: 1, 0.85
            pos_hint: {'x': 0, 'top': 1}

        # Stats Panel in the bottom-left
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.4, 0.15
            pos_hint: {'x': 0.02, 'y': 0.02} # Positioned at the bottom-left
            spacing: '5dp'

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.5  # Semi-transparent black (adjust alpha for transparency)
                Rectangle:
                    size: self.size
                    pos: self.pos

            MDLabel:
                id: fuel_label_id
                text: "Fuel = 0"
                font_name: "Minecraft"
            MDLabel:
                id: battery_label_id
                text: "Battery = 0"
                font_name: "Minecraft"
            MDLabel:
                id: packages_label_id
                text: "Packages = 0"
                font_name: "Minecraft"

        # DPad in the bottom-right
        DPad:
            id: dpad_id
            size_hint: 0.4, 0.15
            pos_hint: {'right': 0.98, 'y': 0.02}
            callback: root.on_dpad_direction

        # Hint and Menu buttons at the TOP-RIGHT
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "100dp", "80dp"
            pos_hint: {'right': 0.98, 'top': 0.98}
            spacing: '10dp'
            
            # --- Hint Button (Small) ---
            RelativeLayout:
                ImageButton:
                    id: hint_button_id  # <--- ADD THIS ID HERE
                    source_normal: app.path_button_small
                    on_release: app.play_button_sound(); root.request_hint()
                Label:
                    text: "Hint"
                    font_name: "Minecraft"
                    color: 0, 0, 0, 1
                    font_size: "14sp"
            
            # --- Menu Button (Small) ---
            RelativeLayout:
                ImageButton:
                    # This button doesn't need an id, since it's not referenced in Python
                    source_normal: app.path_button_small
                    on_release: app.play_button_sound(); root.show_menu()
                Label:
                    text: "Menu"
                    font_name: "Minecraft"
                    color: 0, 0, 0, 1
                    font_size: "14sp"